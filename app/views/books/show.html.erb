<div class="container">
	<% if flash[:notice] %>
  		<p><%= flash[:notice] %></p>
	<% end %>
	<div class="row">
<%= render 'users/list', user: @user, book: @bookn %>
		<div class="col-md-9">
			<h2>Book detail</h2>
			<table class="table">
				<thead>
					<tr>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><%= link_to(user_path(@user.id)) do %>
								<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "142_refileDownloadImage.jpg", :size=>"40x40" %><br>
								<%= link_to @user.name, user_path(@user.id) %>
								<% end %>
						</td>
						<td>
							<%= link_to @book.title, book_path(@book.id) %>
						</td>
						<td><%= @book.body %></td>
							<% if @user == current_user %>
								<td class="btn btn-success"><%= link_to "Edit", edit_book_path(@book.id) %></td>
								<td class="btn btn-danger"><%= link_to "destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？"  %></td>
							<% end %>
					</tr>
				</tbody>
			</table>
		</div>

	</div>
</div>