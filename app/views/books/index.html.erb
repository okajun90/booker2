<div class="container">
	<div class="row">
		<%= render 'layouts/error_messages', book: @bookn %>
		<%= render 'users/list', user: @user, book: @bookn %>
		
		<div class="col-md-9">
			<h2>Books</h2>
			<table class="table table-hover">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opnion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |f| %>
						<tr>
							<td><%= link_to(user_path(f.user.id)) do %>
								<%= attachment_image_tag f.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "142_refileDownloadImage.jpg", :size=>"40x40" %></td>
								<% end %>
							<td><%= link_to f.title, book_path(f.id) %></td>
							<td><%= f.body %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>