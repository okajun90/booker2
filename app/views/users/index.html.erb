<div class="container">
	<div class="row">

		<%= render 'users/list', user: @user, book: @book %>
		<div class="col-md-6">
			<h2>Users</h2>
			<table class="table table-hover">
				<thead>
					<th>image</th>
					<th>name</th>
				</thead>
				<tbody>
					<% @users.each do |f| %>
						<tr>
						<td><%= attachment_image_tag f, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "142_refileDownloadImage.jpg", :size=>"40x40"  %></td>
							<td><%= f.name %></td>
							<td><%= link_to "show", user_path(f.id) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
