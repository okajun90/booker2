<div class="container">
	<% if flash[:notice] %>
  		<p><%= flash[:notice] %></p>
	<% end %>
	<div class="row">
<%= render 'users/list', user: @user, book: @book %>

		<div class="col-md-9">
			<h2>Books</h2>
			<table class="table table-hover">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |f| %>
						<tr>
							<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "142_refileDownloadImage.jpg", :size=>"60x60" %></td>
							<td><%= link_to f.title, book_path(f.id) %></td>
							<td><%= f.body %></td>
						</tr>
					<% end %>
				</tbody>
			</table>

		</div>
	</div>
</div>
